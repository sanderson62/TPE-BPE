################################################################################
#                       
#     JOB: fnlbalm50
#       This job checks the totals from job fllgm50, steps EL509 and EL525
#                      
################################################################################
BEGINJOB mode='MVS'

################################################################################
# 
# PERL1 Checks EL509 Against Totals from fllgm35 ECS064
#
################################################################################
LABEL name=PERL1
################################################################################
#
ASSGNDD ddname='SYSIN' type='INSTREAM'  << !
perl $HOME/bin/cpschkbal2.pl $SEQFILES/fllgm35.ECS064.ME50.BAL.AMTS $SEQFILES/fllgm50.EL509.ME50.BAL.AMTS $SEQFILES/fnlafter50.@YYYYMMDD.txt $SEQFILES/fnlchkbal2.@YYYYMMDD.msgs
!
EXECPGM pgmname='BPXBATCH' stepname='PERL1' parm='SH'

################################################################################
LABEL name=PERL2
################################################################################
#
ASSGNDD ddname='SYSIN' type='INSTREAM'  << !
perl $HOME/bin/cpschkbal2.pl $SEQFILES/fllgm15.EL522.ME50.BAL.AMTS $SEQFILES/fllgm50.EL525.ME50.BAL.AMTS $SEQFILES/fnlafter50.@YYYYMMDD.txt $SEQFILES/fnlchkbal2.@YYYYMMDD.msgs
!
EXECPGM pgmname='BPXBATCH' stepname='PERL2' parm='SH'

if ($JOBSTATUS == 0) then
else
    "cat $SEQFILES/fllgm35.ECS064.ME50.BAL.AMTS $SEQFILES/fllgm50.EL509.ME50.BAL.AMTS $SEQFILES/fllgm15.EL522.ME50.BAL.AMTS > $SEQFILES/fl.flm50.out.bal.txt"
    "cat $SEQFILES/fllgm50.EL525.ME50.BAL.AMTS >> $SEQFILES/fl.flm50.out.bal.txt"
    "mutt -s ' FNL EL509 or EL522 IS OUT OF BALANCE' -i $SEQFILES/fl.flm50.out.bal.txt -e 'my_hdr FROM:pema@cso.com' lgoncall@cso.com < /dev/null"
endif

ENDJOB 
################################################################################
#        C H A N G E    L O G
################################################################################
# DATE     IR/CR         PGMR   DESCRIPTION
################################################################################
# 042412   2011110200001 PEMA   NEW JOB
