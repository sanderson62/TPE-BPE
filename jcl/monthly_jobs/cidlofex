BEGINJOB mode='MVS' jobclass='J' 

################################################################################
LABEL name=CIDLOFEX
################################################################################
ASSGNDD ddname='SYSOUT' type='SYSOUT' class='JOBCLASS' 
ASSGNDD ddname='SYSLST' type='SYSOUT' class='A' 
ASSGNDD ddname='SYS008' type='SYSOUT' class='A' 
ASSGNDD ddname='ERLOFC' type='VS' filename='ERLOFC' disp='i-o' 
ASSGNDD ddname='MSTROT' filename='/data/seqfiles/CI.EX.ERLOFC.EXT' disp='o' normal='k' abend='d' recsize='59' recfmt='F' 

EXECPGM pgmname='CIDLOFEX' stepname='CIDLOFEX' 

################################################################################
LABEL name=FTP    
################################################################################
ASSGNDD ddname='SYSIN' type='INSTREAM' << !
ftp -n ntis2 < $JCLLIB/ftp-cidlofex
!
EXECPGM pgmname='BPXBATCH' stepname='FTP' parm='SH'

ENDJOB 
