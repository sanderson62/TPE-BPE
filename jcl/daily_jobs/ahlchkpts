BEGINJOB mode='MVS' 
LABEL name=PERL1
ASSGNDD ddname='SYSIN' type='INSTREAM'  << !
cp $SEQFILES/clms.out.tst.txt $SEQFILES/clms.out.ahl.txt
perl $HOME/bin/bal_sheet_ss.pl $SEQFILES/ahlmechkpts.txt $SEQFILES/ahlmechkpts.xlsx
!
EXECPGM pgmname='BPXBATCH' stepname='PERL1' parm='SH'
LABEL name=EMAIL
ASSGNDD ddname='SYSIN' type='INSTREAM'  << !
mutt -s 'AHL checkpoints' -i /apps/prod/cid1p/emails/chkpts.txt -e 'my_hdr FROM:slunikix<pema@cso.com>' -a $SEQFILES/ahlmechkpts.xlsx dcpseomcheckpoints@cso.com < /dev/null
!
EXECPGM pgmname='BPXBATCH' stepname='EMAIL' parm='SH'
ENDJOB 
